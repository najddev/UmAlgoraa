

@{
    ViewData["Title"] = "contactus";
    Layout = "_Layout";
}


<div class="container-fluid  d-flex flex-wrap">

    <div class="col-12 d-flex flex-wrap ">
        <div class="col-3 "></div>
        <div class="col-6 ">
            <div class="row d-flex flex-wrap ">

                <div class="col-4 "></div>
                <div class="col-4 ">

                    <img class="w-100 h-100" src="~/img/MyLogo.jpg" />
                    <h2 class="text-primary">اتصل بنا</h2>
                </div>
                <div class="col-4 "</div>
            </div>

            <form dir="rtl" lang="ar" class="row pt-5 d-flex justify-content-center" asp-controller="Home" asp-action="ContactUs" method="get">


                <!-- Email input -->
                <div class="form-outline my-4 d-flex justify-content-center">
                    <input type="text" name="Username" class="form-control w-50" placeholder="الاسم " />
                </div>
                <!-- Password input -->
                <div class="form-outline my-4 d-flex justify-content-center">
                    <input type="text" name="phone"  class="form-control w-50" placeholder="الهاتف " />
                </div>
                <div class="form-outline my-4 d-flex justify-content-center">
                    <input type="text" name="email"  class="form-control w-50" placeholder="البريد الالكتروني " />
                </div>

                <!-- 2 column grid layout -->
                <div class="row mb-4">
                    <div class="form-outline my-4 d-flex justify-content-center">
                       <textarea  cols="30" rows="8">


                       </textarea>
                    </div>


                </div>
    

                <button type="submit" style="background-color:#4281BE" class="btn text-light btn-block mb-4 rounded-5 w-25">ارسال</button>



            </form>

        </div>
        <div class="col-3 "</div>
    </div>
</div>
<!-- Pills content -->