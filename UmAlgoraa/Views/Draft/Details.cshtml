@model UmAlgoraa.ViewModels.AdsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "_MyLayout";
}
<div class="container-fluid  d-flex flex-wrap">
    <div class="col-12 d-flex flex-wrap ">
        <div class="col-3 "></div>
        <div class="col-6 " >
            <div class="row d-flex flex-wrap ">

                <div class="col-4 "></div>
                <div div class="col-4 ">
                    <h5 class="text-primary p-2 m-1">  @Model.Title </h5>
                    <p class="text-primary p-2 m-1"> تفاصيل الاعلان </p>
                    <img class="text-primary p-2 m-1" style="width:200px;height:200px;" src="/img/@Model.ImagePath"/>
                </div>
                <div class="col-4 "</div>
            </div>
            <form dir="rtl" lang="ar" class="row pt-5 d-flex justify-content-end" asp-action="New">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row  w-100">
                    <div class="container-fluid d-flex">
                        <div class="form-group col-6 p-2 m-2 ">
                            @* <label asp-for="Title" class="control-label"> المنافسة</label>*@
                            <p style="border-radius:25px; color:black;300px" class="form-control "> المنافسة : @Model.Competition</p>
                            <span asp-validation-for="Competition" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 p-2 m-2 ">
                            <p style="border-radius:25px; color:black;width:300px" class="form-control "> قيمة الكراسة : @Model.PampletValue</p>
                            <span asp-validation-for="PampletValue" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="container-fluid d-flex">
                        <div class="form-group col-6 p-2 m-2  ">
                            <p style="border-radius:25px; color:black;width:300px" class="form-control "> موعد فتح الظرف : @Model.OpenDate</p>
                            <span asp-validation-for="OpenDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 p-2 m-2">

                            <p style="border-radius:25px; color:black;width:300px" class="form-control "> قيمة المنافسة : @Model.CompetitionNum</p>
                            <span asp-validation-for="CompetitionNum" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="container-fluid d-flex">
                        <div class="form-group col-6 p-2 m-2 ">
                            <p style="border-radius:25px; color:black ;width:300px" class="form-control "> اخر موعد لتقديم العطائات : @Model.Deadline</p>
                            <span asp-validation-for="Deadline" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 p-2 m-2 ">

                            <p style="border-radius:25px; color:black ;width:300px" class="form-control "> الملاحظات : @Model.Notes</p>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>


            </form>


        </div>

        <div class="col-3 "</div>
    </div>

</div>
<div class="justify-content-center tab-content text-center">

    <a type="submit" asp-action="Delete" asp-controller="Draft" asp-route-id="@Model.Id" style="background-color:#4281BE;border-radius:25px" class="btn text-light btn-block mb-4 rounded-5 w-25">حذف</a>

    <a type="submit" asp-action="Edit" asp-controller="Draft" asp-route-id="@Model.Id" style="background-color:#4281BE;border-radius:25px" class="btn text-light btn-block mb-4 rounded-5 w-25">تعديل</a>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


