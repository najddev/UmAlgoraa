@model UmAlgoraa.ViewModels.SignInViewModel

@{
    ViewData["Title"] = "SignIn";
    Layout = "_Layout";
}


<div class="container-fluid  d-flex flex-wrap">

    <div class="col-12 d-flex flex-wrap ">
        <div class="col-3 "></div>
        <div class="col-6 " >
            <div class="row d-flex flex-wrap ">

                <div class="col-4 "></div>
                <div class="col-4 ">

                    <img class="w-100 h-100" src="~/img/MyLogo.jpg" />
                    <h2 class="text-primary">تسجيل الدخول</h2>
                </div>
                <div class="col-4 "</div>
            </div>

            <form dir="rtl" lang="ar" class="row pt-5 d-flex justify-content-center" asp-controller="Ads" asp-action="Index">


                <!-- Email input -->
                <div class="form-outline my-4 d-flex justify-content-center">
                    <input type="text" name="Username" asp-for="Username" class="form-control w-50" placeholder="اسم المستخدم" />
                </div>
                <!-- Password input -->
                <div class="form-outline mb-4 d-flex justify-content-center">
                    <input asp-for="Password" class="form-control w-50" placeholder="كلمة المرور" />

                </div>

                <!-- 2 column grid layout -->
                <div class="row mb-4">
                    <div class="col-md-6 d-flex ">
                        <!-- Checkbox -->
                        <div class="form-check mb-3 mb-md-0">
                            <label class="form-check-label" for="loginCheck"> تذكرنى</label>
                            <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />

                        </div>
                    </div>


                </div>
               @* <div class=" row">
                    <p><a href="/Register/forgitPassword">نسيت كلمة المرور؟</a></p>
                </div>*@
                <div class=" row">
                    <p>ليس لديك حساب التسجيل؟ <a asp-action="Registration">مستخدم جديد</a></p>
                </div>

                <!-- Submit button -->

                <button type="submit" style="background-color:#4281BE" class="btn text-light btn-block mb-4 rounded-5 w-25">تسجيل الدخول</button>

                <!-- Register buttons -->

            </form>

        </div>
        <div class="col-3 "</div>
    </div>
</div>
<!-- Pills content -->